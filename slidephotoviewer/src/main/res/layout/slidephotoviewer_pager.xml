<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools">

    <androidx.viewpager.widget.ViewPager
        android:layout_centerInParent="true"
        android:id="@+id/slidephotoviewer_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.viewpager.widget.ViewPager>

    <com.rd.PageIndicatorView
        android:layout_alignBottom="@id/slidephotoviewer_viewpager"
        android:layout_centerHorizontal="true"
        android:id="@+id/slidephotoviewer_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:piv_autoVisibility="false"
        app:piv_animationType="thinWorm"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_viewPager="@id/slidephotoviewer_viewpager"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>